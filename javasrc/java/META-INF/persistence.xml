<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="StageRunnerPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.oracle.stagerun.entity.Component</class>
        <class>com.oracle.stagerun.entity.Platform</class>
        <class>com.oracle.stagerun.entity.Product</class>
        <class>com.oracle.stagerun.entity.RegressDetails</class>
        <class>com.oracle.stagerun.entity.Releases</class>
        <class>com.oracle.stagerun.entity.ShiphomeNames</class>
        <class>com.oracle.stagerun.entity.Stage</class>
        <class>com.oracle.stagerun.entity.StageUpperstackShiphomes</class>
        <class>com.oracle.stagerun.entity.Testunit</class>
        <class>com.oracle.stagerun.entity.Users</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/results?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="mysql"/>
    </properties>
  </persistence-unit>
</persistence>


