<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="StageRunnerPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.oracle.stagerun.entities.PlatformEntity</class>
        <class>com.oracle.stagerun.entities.ProductsEntity</class>
        <class>com.oracle.stagerun.entities.RegressDetails</class>
        <class>com.oracle.stagerun.entities.ReleasesEntity</class>
        <class>com.oracle.stagerun.entities.StageEntity</class>
        <class>com.oracle.stagerun.entities.StageInfraDetailsEntity</class>
        <class>com.oracle.stagerun.entities.StageUpperstackShiphomesEntity</class>
        <class>com.oracle.stagerun.entities.TestUnitsEntity</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/results?zeroDateTimeBehavior=convertToNull"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value="mysql"/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
            
            <property name="eclipselink.cache.shared.default" value="false"/>
            <property name="eclipselink.cache.size.default" value="0"/>
            <property name="eclipselink.cache.type.default" value="None"/>
        </properties>
    </persistence-unit>
</persistence>
